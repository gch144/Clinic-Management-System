@model DoctorSchedule

@{
    ViewData["Title"] = "Create Doctor Schedule";
}


<h1>Create Doctor Schedule</h1>


@{
    // Retrieve doctor information from ViewData
    var doctor = ViewData["docToCreateScheduleFor"] as auth.Models.Domain.User;
}

<h3>Creating schedule for: @doctor?.Name </h3>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
    @TempData["ErrorMessage"]
</div>
}
<form asp-action="CreateDoctorSchedule" method="post">
    <div class="form-group" hidden=true>
        <label asp-for="DoctorId" hidden=true></label>
        <input asp-for="DoctorId" class="form-control" value=@doctor.Id hidden=true />
        <span asp-validation-for="DoctorId" class="text-danger" hidden=true></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorDate"></label>
        <input asp-for="DoctorDate" class="form-control" />
        <span asp-validation-for="DoctorDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <button type="submit">Create</button>
</form>

<a asp-action="DisplayDoctorSchedules">Back to List</a>

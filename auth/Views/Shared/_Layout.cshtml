<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auth Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Clinic</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="#">Home</a></li>
                <li><a href="/Dashboard/Display">Dashboard</a></li>
                <li><a href="/UserAuthentication/Login">Login</a></li>
                @if (User.IsInRole("admin"))
                {
                    <li><a href="/Admin/RegistrationDoctor">RegistrationDoctor</a></li>
                    <li><a href="/Admin/Display">Account Verification</a></li>
                    <li><a href="/Admin/DisplayDoctorSchedules">Doctor Schedules</a></li>
                }
                @if (User.IsInRole("patient"))
                {
                    <li><a href="/Appointment/SearchDoctor">Seach Doctors</a></li>
                    <li><a href="/Appointment/DisplayPatientAppointments">Appointments</a></li>
                }
                @if (User.IsInRole("doctor"))
                {
                    <li><a href="/Appointment/DisplayDoctorAppointments">Appointments</a></li>
                }
                @if (!string.IsNullOrEmpty(User.Identity.Name))
                {
                    <li><a href="/UserAuthentication/ChangePassword">ChangePassword</a></li>
                    <li><a href="/UserAuthentication/Logout">Logout</a></li>
                }
            </ul>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>
</body>

</html>
